<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=devide-width">
    <title>Tableau de notes</title>
    <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet" />
</head>
<body>
<table class="table">
    {%  for note in notes %}
        <tr>
            <td>{{ note }}</td>
        </tr>

    {% endfor %}

</table>
<div class="alert alert-info">
    <p>Nombre de notes : {{ notes | length }}</p>
    <p>Note minimale : {{ min(notes) | length }}</p>
    <p>Note maximale : {{ max(notes) | length }}</p>
</div>
</body>
</html>

